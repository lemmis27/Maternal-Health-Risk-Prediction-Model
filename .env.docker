# Docker Environment Configuration
# Copy this to .env and modify values as needed

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/maternal_health

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-long-and-random

# Redis Configuration
REDIS_URL=redis://redis:6379

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO

# Model Configuration
MODEL_PATH=models/maternal_risk_pipeline.joblib
DATA_FILE=data/Maternal Health Risk Data Set.csv

# Performance
WORKERS=4
MAX_CONNECTIONS=100

# Security Headers
SECURE_SSL_REDIRECT=false
SECURE_HSTS_SECONDS=31536000